echo "/server/logs/nginx/*.log {
    daily
    maxsize 100M
    missingok
    rotate 365
    compress
    delaycompress
    dateext
    dateformat -%Y%m%d
    notifempty
    create 0640 nginx nginx
    sharedscripts
    postrotate
        if [ -f /run/nginx/process.pid ]; then
            kill -USR1 `cat /run/nginx/process.pid`
        fi
    endscript
}" > /etc/logrotate.d/nginx